<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/fab_margin"
    tools:context=".fragments.ApplicationVersionTab">

    <LinearLayout
        android:id="@+id/versionCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/colorPrimaryDark"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/version_code"
            android:textSize="@dimen/headingSize"
            android:textColor="@color/design_default_color_primary_dark"
            />

        <TextView
            android:id="@+id/edit_text_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/design_default_color_primary_dark"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/versionCodeLayout"
        android:backgroundTint="@color/colorPrimaryDark"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/version_no"
            android:textSize="@dimen/headingSize"
            android:textColor="@color/design_default_color_primary_dark"
            />

        <TextView
            android:id="@+id/edit_text_version_no"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/design_default_color_primary_dark"

            />

    </LinearLayout>


</RelativeLayout>